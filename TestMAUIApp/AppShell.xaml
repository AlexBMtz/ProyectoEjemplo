<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="TestMAUIApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TestMAUIApp"
       xmlns:views="clr-namespace:TestMAUIApp.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="TestMAUIApp">

    <FlyoutItem Title="Home"
                Icon="about.png">
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate views:HomeView}"
                      Route="HomeView" />
    </FlyoutItem>
    <FlyoutItem Title="Books"
                Icon="about.png">
        <ShellContent Title="Books"
                      ContentTemplate="{DataTemplate views:BooksView}"
                      Route="BooksView"
                      x:Name="BookOption"
                      IsVisible="False" />
    </FlyoutItem>
    <!--<MenuFlyoutItem>
        
    </MenuFlyoutItem>-->

</Shell>
